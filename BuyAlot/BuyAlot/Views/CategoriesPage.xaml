                        <Label Text="Beauty" FontSize="Large" TextColor="Snow"/>
                        <Label Text="Available items: 5" TextColor="Snow"/>
                    </StackLayout>
                </StackLayout>

                <StackLayout Orientation="Horizontal" BackgroundColor="#7c7a7a" Margin="0,0,0,0">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="BooksCat_Tapped" />
